<Application x:Class="Stocktaking.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Stocktaking" 
             StartupUri="Views/StocktakingWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <BitmapImage x:Key="Delete" UriSource="pack://application:,,,/Resources/Delete.png"/>
            <BitmapImage x:Key="Eraser" UriSource="pack://application:,,,/Resources/Eraser.png"/>
            <BitmapImage x:Key="Refresh" UriSource="pack://application:,,,/Resources/Refresh.png"/>
            <BitmapImage x:Key="Excel" UriSource="pack://application:,,,/Resources/Excel-logo.png"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Styles/Colors.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/Styles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Styles/ToolTip.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/CommonWindows;component/Styles/ScrollBar.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
